<Window x:Class="ModernDesign.MVVM.View.AnnouncementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:core="clr-namespace:LeuanS4ToolKit.Core"
        Title="Announcement"
        Height="550" Width="650"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Estilo para el botón de cerrar -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#475569"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="12,8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#64748B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" 
            Background="#0F172A" 
            Padding="30">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" 
                            ShadowDepth="0" 
                            Opacity="0.6"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header con Logo -->
            <StackPanel Grid.Row="0" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20">

                <!-- Logo -->
                <Image x:Name="LogoImage"
                       Width="50"
                       Height="50"
                       Margin="0,0,15,0"
                       VerticalAlignment="Center"
                       Stretch="Uniform"
                       Visibility="Collapsed"/>

                <!-- Título -->
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="📢 Announcement"
                               core:LocalizationProperties.LocalizeText="AnnouncementWindow.HeaderText"
                              x:Name="HeaderText"
                              FontSize="24"
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              TextAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Imagen del anuncio -->
                <Border Grid.Row="0"
                        x:Name="ImageBorder"
                        Background="#1E293B"
                        CornerRadius="12"
                        Margin="0,0,0,20"
                        Visibility="Collapsed">
                    <Image x:Name="AnnouncementImage"
                           MaxHeight="200"
                           Stretch="Uniform"
                           Margin="15"/>
                </Border>

                <!-- Texto del anuncio -->
                <Border Grid.Row="1"
                        Background="#1E293B"
                        CornerRadius="12"
                        Padding="25">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled">
                        <TextBlock x:Name="AnnouncementTextBlock"
                                  Text="Loading announcement..."
                                  FontSize="16"
                                  Foreground="White"
                                  TextWrapping="Wrap"
                                  LineHeight="26"
                                  TextAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- Footer con botón -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center">
                <Button x:Name="CloseButton"
                        core:LocalizationProperties.LocalizeText="AnnouncementWindow.CloseButton"
                        Content="Close"
                        Style="{StaticResource CloseButtonStyle}"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>