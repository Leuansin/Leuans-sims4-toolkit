<Window x:Class="ModernDesign.MVVM.View.CheatsGuideView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:core="clr-namespace:LeuanS4ToolKit.Core"
        Title="Cheats Guide"
        Width="1024"
        Height="550"
        MinWidth="900"
        MinHeight="650"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Loaded="Window_Loaded"
        core:LocalizationProperties.LocalizeTitle="CheatsGuide.Title">

    <Window.Resources>
        <Style x:Key="CopyButton" TargetType="Button">
            <Setter Property="Background" Value="#6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FavoriteButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E293B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ExportButton" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#059669"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CheatCard" TargetType="Border">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="10" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CategoryButton" TargetType="Button">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,10,10"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" Background="#0F172A" BorderBrush="#6366F1" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="30" Opacity="0.5" Color="#6366F1"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0" Background="#1E293B" MouseDown="Header_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="30,25,30,25">
                    <TextBlock x:Name="TitleText" Text="🎮 Cheats Guide" 
                               Foreground="White" FontSize="28"
                               FontWeight="Bold" FontFamily="Bahnschrift Light"
                               core:LocalizationProperties.LocalizeText="CheatsGuide.TitleText"
                               FontStyle="Italic">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="2" Opacity="0.8" BlurRadius="10" Color="#6366F1"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock x:Name="SubtitleText" 
                               Text="Complete list of The Sims 4 cheat codes"
                               core:LocalizationProperties.LocalizeText="CheatsGuide.SubtitleText"
                               Foreground="#94A3B8" FontSize="14"
                               FontFamily="Bahnschrift Light"
                               FontWeight="Bold"
                               FontStyle="Italic"
                               Margin="0,8,0,0">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="1" Opacity="0.7" BlurRadius="6"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>

                <!-- Export Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Button x:Name="ExportAllButton" 
                            core:LocalizationProperties.LocalizeText="CheatsGuide.ExportAllButton"
                            Content="📥 Export All" 
                            Style="{StaticResource ExportButton}"
                            Click="ExportAllButton_Click"
                            core:LocalizationProperties.LocalizeTooltip="CheatsGuide.ExportAllButtonTooltip"
                            ToolTip="Export all cheats to a .txt file on Desktop"/>
                    <Button x:Name="ExportFavoritesButton" 
                            core:LocalizationProperties.LocalizeText="CheatsGuide.ExportFavoritesButton"
                            core:LocalizationProperties.LocalizeTooltip="CheatsGuide.ExportFavoritesButtonTooltip"
                            Content="⭐ Export Favorites" 
                            Style="{StaticResource ExportButton}"
                            Click="ExportFavoritesButton_Click"
                            ToolTip="Export only favorite cheats to a .txt file on Desktop"/>
                </StackPanel>

                <Button Grid.Column="2" Content="✕" 
                        Width="45" Height="45"
                        Margin="0,0,20,0"
                        VerticalAlignment="Center"
                        Background="#EF4444"
                        Foreground="White"
                        FontSize="20"
                        FontWeight="Bold"
                        Cursor="Hand"
                        BorderThickness="0"
                        Click="CloseButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#DC2626"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- CONTENT -->
            <Grid Grid.Row="1" Margin="25,20,25,25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Box -->
                <Border Grid.Row="0" Background="#1E293B" CornerRadius="12" Padding="15" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Opacity="0.3"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="🔍" FontSize="20" 
                                   Foreground="#6366F1"
                                   VerticalAlignment="Center" Margin="0,0,10,0"/>

                        <TextBox x:Name="SearchBox" Grid.Column="1"
                                 core:LocalizationProperties.LocalizeText="CheatsGuide.SearchBox"
                                 Background="#0F172A"
                                 Foreground="White"
                                 FontSize="14"
                                 FontFamily="Bahnschrift Light"
                                 FontWeight="Bold"
                                 BorderThickness="0"
                                 Padding="10"
                                 VerticalAlignment="Center"
                                 TextChanged="SearchBox_TextChanged">
                            <TextBox.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Category Filters -->
                <Border Grid.Row="1" Background="#1E293B" CornerRadius="12" Padding="15" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Opacity="0.3"/>
                    </Border.Effect>
                    <WrapPanel x:Name="CategoryPanel" Orientation="Horizontal">
                        <!-- Se generarán dinámicamente -->
                    </WrapPanel>
                </Border>

                <!-- Cheats List -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="CheatsPanel">
                        <!-- Los cheats se generarán dinámicamente -->
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- Resize Grip Visual -->
            <Path Grid.Row="1" 
                  Data="M 0,10 L 10,0 M 0,5 L 5,0" 
                  Stroke="#6366F1" 
                  StrokeThickness="2"
                  HorizontalAlignment="Right" 
                  VerticalAlignment="Bottom" 
                  Margin="0,0,8,8"
                  Opacity="0.5"/>
        </Grid>
    </Border>
</Window>